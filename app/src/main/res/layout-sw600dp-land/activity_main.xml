<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <ImageView
            android:layout_width="72dp"
            android:layout_height="71dp"
            android:layout_margin="5dp"
            android:src="@drawable/globeshopping"
            android:tint="#F383DCCA"
            android:tintMode="multiply"
            tools:srcCompat="@drawable/globeshopping" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="clip_vertical|center_horizontal"
            android:fontFamily="@font/architects_daughter"
            android:rotationX="12"
            android:text="FastMarket"
            android:textAlignment="viewEnd"
            android:textAllCaps="true"
            android:textColor="#17349F"
            android:textSize="55sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:layout_margin="6dp"
        android:clickable="false"
        android:clipChildren="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="visible">


        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="@string/text_username"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:layout_width="460dp"
            android:layout_height="wrap_content"
            android:layout_margin="0sp"
            android:gravity="center"
            android:hint="@string/hint_email"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/text_password"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:layout_width="470dp"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:hint="@string/hint_password"
            android:textSize="15sp" />


        <Button
            style="@style/Widget.AppCompat.Button"
            android:layout_width="111dp"
            android:layout_height="32dp"
            android:layout_margin="15dp"
            android:background="#17349F"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:visibility="visible" />

        <Button
            android:layout_width="107dp"
            android:layout_height="28dp"
            android:background="#0BCABA"
            android:shadowColor="#0B0A0A"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>
