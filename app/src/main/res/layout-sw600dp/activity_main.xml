<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="780dp"
        android:layout_height="505dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <ImageView
            android:layout_width="347dp"
            android:layout_height="338dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:src="@drawable/globeshopping"
            android:tint="#F383DCCA"
            android:tintMode="multiply"
            tools:srcCompat="@drawable/globeshopping" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="@font/architects_daughter"
            android:rotationX="12"
            android:text="FastMarket"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#17349F"
            android:textSize="85sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="775dp"
        android:layout_height="1004dp"
        android:layout_margin="16dp"
        android:clickable="true"
        android:clipChildren="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="310dp"
            android:layout_height="94dp"
            android:text="@string/text_username"
            android:textAlignment="center"

            android:textColor="@color/black"
            android:textSize="55sp" />

        <EditText
            android:layout_width="621dp"
            android:layout_height="59dp"
            android:gravity="center"
            android:hint="@string/hint_email"
            android:textSize="34sp" />

        <TextView
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/text_password"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp" />

        <EditText
            android:layout_width="634dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:hint="@string/hint_password" />


        <Button
            style="@style/Widget.AppCompat.Button"
            android:layout_width="140dp"
            android:layout_height="94dp"
            android:layout_marginBottom="10dp"
            android:background="#17349F"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:visibility="visible" />

        <Button
            android:layout_width="139dp"
            android:layout_height="80dp"
            android:background="#0BCABA"
            android:backgroundTint="#0AF1E8"
            android:ellipsize="end"
            android:shadowColor="#0B0A0A"
            android:singleLine="true"
            android:soundEffectsEnabled="true"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </LinearLayout>
</LinearLayout>
