<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <ImageView
            android:layout_width="153dp"
            android:layout_height="138dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:src="@drawable/globeshopping"
            android:tint="#F383DCCA"
            android:tintMode="multiply"
            tools:srcCompat="@drawable/globeshopping" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="@font/architects_daughter"
            android:rotationX="12"
            android:text="FastMarket"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#17349F"
            android:textSize="75sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="416dp"
        android:layout_margin="16dp"
        android:clickable="false"
        android:clipChildren="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="visible">


        <TextView
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:text="@string/text_username"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <EditText
            android:layout_width="621dp"
            android:layout_height="59dp"
            android:gravity="center"
            android:hint="@string/hint_email" />

        <TextView
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/text_password"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45dp" />

        <EditText
            android:layout_width="634dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:hint="@string/hint_password"
            android:textSize="25sp" />


        <Button
            style="@style/Widget.AppCompat.Button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#17349F"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:visibility="visible" />

        <Button
            android:layout_width="124dp"
            android:layout_height="34dp"
            android:background="#0BCABA"
            android:shadowColor="#0B0A0A"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>
