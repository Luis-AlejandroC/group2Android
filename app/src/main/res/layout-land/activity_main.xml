<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="706dp"
        android:layout_height="144dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <ImageView
            android:layout_width="83dp"
            android:layout_height="81dp"
            android:layout_gravity="start"
            android:layout_margin="15dp"
            android:src="@drawable/globeshopping"
            android:tint="#F383DCCA"
            android:tintMode="multiply"
            tools:srcCompat="@drawable/globeshopping" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="@font/architects_daughter"
            android:rotationX="12"
            android:text="FastMarket"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#17349F"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="731dp"
        android:layout_height="224dp"
        android:layout_margin="6dp"
        android:clickable="false"
        android:clipChildren="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="visible">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_username"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <EditText
            android:layout_width="538dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:hint="@string/hint_email"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_password"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:layout_width="532dp"
            android:layout_height="26dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:hint="@string/hint_password"
            android:textSize="12sp" />


        <Button
            style="@style/Widget.AppCompat.Button"
            android:layout_width="128dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:background="#17349F"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:visibility="visible" />

        <Button
            android:layout_width="124dp"
            android:layout_height="29dp"
            android:background="#0BCABA"
            android:shadowColor="#0B0A0A"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>
