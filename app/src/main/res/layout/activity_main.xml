<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#052196F3"
    android:orientation="vertical"
    android:visibility="visible"
    tools:actionBarNavMode="tabs"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="156dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageviewgloboshopping"
            android:layout_width="160dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:src="@drawable/globeshopping"
            android:tint="#F383DCCA"
            android:tintMode="multiply"
            tools:srcCompat="@drawable/globeshopping" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="@font/architects_daughter"
            android:rotationX="12"
            android:text="FastMarket"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#17349F"
            android:textSize="50sp"
            android:textStyle="bold" />


    </LinearLayout>



        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_margin="6dp"
        android:clickable="true"
        android:clipChildren="true"
        android:gravity="center"
        android:orientation="vertical">


    <TextView
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_username"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/hint_email"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:text="@string/text_password"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5sp"
        android:gravity="center"
        android:hint="@string/hint_password"
        android:textSize="34sp" />

    <Button
        android:id="@+id/edtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#17349F"
        android:onClick="onLogin"
        android:text="@string/text_Loging"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/singUp"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#0BCABA"
        android:backgroundTint="#0AF1E8"
        android:ellipsize="end"
        android:onClick="onsingUp"
        android:shadowColor="#0B0A0A"
        android:singleLine="true"
        android:soundEffectsEnabled="true"
        android:text="@string/text_signUp"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>
